page{
	background-color: #f4f4f4;
}
.container{
	width: 100%;
	background-color: #f4f4f4;
}
.o_tit{
	width: 100%;
	height: 110rpx;
	padding-left: 24rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	font-size: 32rpx;
	font-weight: bold;
	color: #333333;
	margin-bottom: 2rpx;
	background-color: #fff;
	margin-top: 18rpx;
}
.o_msg{
	width: 100%;
	height: 140rpx;
	padding:24rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	background-color: #fff;
	font-size: 28rpx;
	color: #666;
	margin-bottom: 2rpx;
}
.o_address{
	width: 100%;
	height: 110rpx;
	padding-left: 24rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	font-size: 28rpx;
	color: #999999;
	display: flex;
	align-items: center;
	background-color: #fff;
	margin-bottom: 18rpx;
}
.o_address text{
	font-size: 36rpx;
	color: #999;
	margin-right: 20rpx;
}
.o_msg1{
	width: 100%;
	height: 110rpx;
	padding:0 24rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	font-size: 28rpx;
	color: #666666;
	margin-bottom: 2rpx;
	background-color: #fff;
}
.sub_btn{
	margin-top:78rpx;
	margin-bottom: 100rpx;
width:480rpx;
height:80rpx;
background-image:linear-gradient(90deg, #59cafe 0%, #5ebdff 50%, #63b1ff 100%);
border-radius:40rpx;
display:flex;
justify-content:center;
