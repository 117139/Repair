/* pages/orderpl/orderpl.wxss */
page{
	overflow-y: auto!important;
	background: #f7f7f7;
}
.container{
	width: 100%;
	min-height: 100vh;
	padding-top: 18rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	background: #f7f7f7;
}
.plbox{
	width: 100%;
	height: 290rpx;
	padding: 32rpx 24rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	position: relative;
	background: #fff;
	margin-bottom: 18rpx;
}
.plbox textarea{
	width: 100%;
	height: 100%;
	font-size: 28rpx;
	padding-bottom: 42rpx;
}
.iconbianji1{
	position: absolute;
	bottom: 23rpx;
	right: 23rpx;
	font-size: 42rpx;
	color: #e6e6e6;
	z-index: 9;
}
.pl_tit{
	width: 100%;
	height: 100rpx;
	padding-left: 24rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	margin-bottom: 2rpx;
	background-color: #fff;
	display: flex;
	align-items: center;
	color: #666;
	font-size: 36rpx;
}
.pl_fen{
	width: 100%;
	height: 208rpx;
	padding:45rpx 24rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	background-color: #fff;
}
.fen_type{
	display: flex;
	align-items: center;
}
.fen_name{
	font-size: 28rpx;
	color: #666666;
}
.fen_type .iconfont{
	font-size: 30rpx;
	color: #9a9a9a;
	margin: 0 11rpx;
}
.fen_type .iconstar{
	color: #f00;
}
.sub_btn{
	width: 480rpx;
	height: 80rpx;
	background-image: linear-gradient(90deg, 
		#59cafe 0%, 
		#5ebdff 50%, 
		#63b1ff 100%);
	border-radius: 40rpx;
	font-size: 28rpx;
	color: #fff;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 80rpx;
}