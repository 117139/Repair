.container{
	width: 100%;
	position: relative;
	background-color: #fff;
}
.dest_l{
	width: 158rpx;
	height: 100vh;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 9;
	background: #f5f5f5;
}
.dest_r{
	width: 100%;
	padding-top: 30rpx;
	padding-left: 186rpx;
	padding-right: 28rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
.dest_1{
	width:158rpx;
	height:108rpx;
	font-size:28rpx;
	font-family:Microsoft YaHei;
	font-weight:400;
	color:rgba(51,51,51,1);
	display: flex;
	justify-content: center;
	align-items: center;
}
.dest_1.cur{
	color:rgba(94,204,194,1);
	background-color: #fff;
}
.dest_box{
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}
.dest_one{
	width: 260rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.dest_one image{
	width: 260rpx;
	height: 260rpx;
	border-radius: 10rpx;
}
.dest_one text{
	line-height: 67rpx;
	font-size:30rpx;
	text-align: center;
	color: #333;
}
.more{
	margin-top: 38rpx;
	margin-bottom: 32rpx;
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size:26rpx;
	font-family:Microsoft YaHei;
	font-weight:400;
	color:#5ECCC2;
}
.more .iconfont{
	color:#5ECCC2;
	font-size: 16rpx;
}
.dest_tit{
	font-size:36rpx;
	font-family:FZDaBiaoSong-B06;
	font-weight:bold;
