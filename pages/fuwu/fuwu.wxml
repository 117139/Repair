<!--page/DEST/DEST.wxml-->
<view class="container">
	<view class="ss_box">
		<form bindsubmit="formSubmit" class="ss_box1">
			<view class="dis_flex aic">
				<text class="iconfont iconsousuo">
					<button form-type="submit"></button>
				</text>
				<input type="text" class="search_int" placeholder="请输入商品名称搜索" />
			</view>
		</form>
	</view>
	<scroll-view scroll-y class="dest_l" >
		<view class="dest_1 oh1 {{idx==dest_type? 'cur':''}}"
		 wx:for="{{fw_data}}"
			wx:for-index="idx"
			 wx:for-item="item"
				wx:key="idx"
				data-idx="{{idx}}" bindtap="dest_fuc">{{item.name}}</view>
		<!-- <view class="dest_1 oh1" wx:for="{{mdd_data}}" wx:for-index="idx" wx:for-item="item" wx:key="idx">{{item.name}}</view> -->
	</scroll-view>
	<view class="dest_r">
		<view class="type_name">{{fw_data[dest_type].name}}</view>
		<view class="dis_flex type1_box">
			<view class="type1_one" 
				wx:for="{{type1}}"
				wx:for-index="idx"
				wx:for-item="item"
				wx:key="idx"
				data-url="/pages/details/details"
				bindtap="jump">
				<image src="{{item.pic}}"></image>
				<view class="oh2">{{item.name}}</view>
			</view>
		</view>
	</view>
</view>