/* pages/baoxiu/baoxiu.wxss */
page{
	overflow-y: auto!important;
	background: #f7f7f7;
}
.container{
	width: 100%;
	min-height: 100vh;
	padding: 18rpx 24rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	background: #f7f7f7;
}
.baoxiu_box{
	position: relative;
	width: 100%;
	height: 380rpx;
	box-shadow: 0px 3rpx 6rpx 0px 
		rgba(0, 0, 0, 0.19);
	border-radius: 10rpx;
	margin-bottom: 20rpx;
}
.baoxiu_box image{
	position: absolute;
	top: 0;
	left: 0;
	z-index: 1;
	width: 100%;
	height: 380rpx;
}
.bx_titi{
	position: absolute;
	top: 54rpx;
	width: 100%;
	text-align: center;
	color: #fff;
	font-size: 44rpx;
	z-index: 5;
}
.bx_msg{
	position: absolute;
	top: 157rpx;
	padding:0 74rpx;
	width: 100%;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	color: #fff;
	font-size: 28rpx;
	z-index: 5;
}
.msg_one{
	display: flex;
	margin-bottom: 16rpx;
}
.msg_name{
	display: flex;
	align-items: center;
	margin-right: 40rpx;
}
.msg_name text{
	width: 4em;
	text-align:justify;   
	text-justify:distribute-all-lines;  
	text-align-last:justify;     
}