<!--pages/mymsg/mymsg.wxml-->
<form class="container"  bindsubmit="formSubmit">
	<view class="tx_box">
		<text class="msg_name">头像</text>
		<image src="../../static/images/tx.png"></image>
	</view>
	<view class="msg_box">
		<text class="msg_name">姓名</text>
		<view class="dis_flex aic msg_val">李晓华</view>
	</view>
	<picker  class="w100" bindchange="bindPickerChange" value="{{index}}" range="{{sex}}">
		<view class="msg_box">
			<text class="msg_name">性别</text>
			<view class="dis_flex aic msg_val">{{sex[index]}}<text class="iconfont iconnext"></text></view>
		</view>
		<input class="hidden" name="sex"
		 type="text"
		 value="{{sex[index]}}" disabled/>
	</picker>
	<view class="msg_box">
		<text class="msg_name">电话</text>
		<input class="msg_int" type="text" name="tel" placeholder="请输入手机号" />
		<!-- <view class="dis_flex aic msg_val">12456321458</view> -->
	</view>
	 <picker class="w100"
	  mode="region"
	  bindchange="bindRegionChange"
	  value="{{region}}"
	>
	<view class="msg_box">
		<text class="msg_name">现居住地</text>
		<view class="dis_flex aic msg_val">{{region[0]}} {{region[1]}} {{region[2]}} <text class="iconfont iconnext"></text></view>
	</view>
	<input class="hidden" name="address"
	 type="text"
	 value="{{region[0]}} {{region[1]}} {{region[2]}}" disabled/>
	</picker>
	<view class="msg_box msg_box1">
		<text class="msg_name">详情地址</text>
		<textarea class="msgsrk" name="xxaddress"  placeholder="街道、楼牌号等"></textarea>
		<!-- <view class="dis_flex aic msg_val">12456321458</view> -->
	</view>
	<view class="w100 dis_flex ju_c">
		<button class="sub_btn" form-type="submit">保存</button>
	</view>
</form>
