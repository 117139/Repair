/* pages/mymsg/mymsg.wxss */
page{
	overflow-y: auto!important;
	background: #f7f7f7;
}
.container{
	width: 100%;
	min-height: 100vh;
	
	background: #f7f7f7;
}
.tx_box{
	width: 100%;
	height: 140rpx;
	border-bottom: 1px solid #eee;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 24rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	font-size: 30rpx;
	color: #333;
	background-color: #fff;
}
.tx_box image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.msg_box{
	width: 100%;
	height: 110rpx;
	border-bottom: 1px solid #eee;
	display: flex;
	font-size: 30rpx;
	color: #333;
	justify-content: space-between;
	align-items: center;
	padding: 0 24rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	background-color: #fff;
}
.msg_val{
	color: #9c9c9c;
}
.iconnext{
	font-size: 24rpx;
	color: #919191;
	margin-left: 10px;
}