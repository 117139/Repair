	<view class="header">
		<image class="mybg" src="../../static/images/my_02.png"></image>
		<text class="iconfont iconshezhi" data-url="/pages/mymsg/mymsg" bindtap="jump"></text>
		<view class="tx_box"><image src='{{userInfo.avatarUrl}}'></image></view>
